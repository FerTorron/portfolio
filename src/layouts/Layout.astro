---
import Eclipse from '../components/Eclipse.astro';
import Navbar from '../components/Navbar.astro';
import Inicio from '../components/Inicio.astro'
import SobreMi from '../components/SobreMi.astro';
import Tecnologias from '../components/Tecnologias.astro';
import Social from '../components/Social.astro';
import Proyectos from '../components/Proyectos.astro';
import Contacto from '../components/Contacto.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="bg-background" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-spaceGrotesk">
		<Navbar />
		<Social />
		<Inicio />
		<SobreMi />
		<Tecnologias />
		<Proyectos />
		<Contacto />
		<!-- <slot /> -->
		<Eclipse />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap');
	:root {
		--text: #f0f6ff;
		--background: #142038;
		--primary: #2470eb;
		--secondary: #3c83f6;
		--accent: #0077ff;
	}
</style>
