---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html class="bg-background" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio de Fernando Nahuel Torrón - Desarrollador Fullstack">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content="https://fertorron.vercel.app">
		<meta property="og:type" content="website">
		<meta property="og:title" content="FerTorrón - Portfolio">
		<meta property="og:description" content="Portfolio de Fernando Nahuel Torrón - Desarrollador Fullstack">
		<meta property="og:image" content="/meta.png">

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="fertorron.vercel.app">
		<meta property="twitter:url" content="https://fertorron.vercel.app">
		<meta name="twitter:title" content="FerTorrón - Portfolio">
		<meta name="twitter:description" content="Portfolio de Fernando Nahuel Torrón - Desarrollador Fullstack">
		<meta name="twitter:image" content="/meta.png">
	</head>
	<body class="font-spaceGrotesk">
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap');
	:root {
		--text: #f0f6ff;
		--background: #142038;
		--primary: #2470eb;
		--secondary: #3c83f6;
		--accent: #0077ff;
	}

	html {
		scroll-padding-top: 120px;
		scroll-behavior: smooth;
	}

</style>
